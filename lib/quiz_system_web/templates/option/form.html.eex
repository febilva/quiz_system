<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :option %>
  <%= text_input f, :option %>
  <%= error_tag f, :option %>

  <%= label f, :is_asnwer %>
  <%= checkbox f, :is_asnwer %>
  <%= error_tag f, :is_asnwer %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
