<h1>Listing Options</h1>

<table>
  <thead>
    <tr>
      <th>Option</th>
      <th>Is asnwer</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for option <- @options do %>
    <tr>
      <td><%= option.option %></td>
      <td><%= option.is_asnwer %></td>

      <td>
        <%= link "Show", to: Routes.question_option_path(@conn, :show,@question_id, option) %>
        <%= link "Edit", to: Routes.question_option_path(@conn, :edit,@question_id, option) %>
        <%= link "Delete", to: Routes.question_option_path(@conn, :delete,@question_id, option), method: :delete, data: [confirm: "Are you sure?"] %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Option", to: Routes.question_option_path(@conn, :new,@question_id) %></span>
